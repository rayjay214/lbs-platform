/* pages/login/login.wxss */

page{
  height: 100%;
  background-size:100%;
}
 
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  padding: 0;
  box-sizing: border-box;
  /* background-color: #f2f2f2;     */
} 
 
.login-icon{
  flex: none;
  margin: 0 auto;
  margin-top: 200rpx;
}

.login-img{
  width: 300rpx;
  height: 300rpx;
  border-radius: 20rpx;
  opacity: 0.9;
}
 
.login-from {
  margin-top: 90px;
  flex: auto;
  height:100%;
}
 
.account{
  width: 90%;
  height: 80rpx;
  margin: 0 auto;
  border:1px solid #ccc;
  border-radius: 50rpx;
 
}
.pwd{
  width: 90%;
  height: 80rpx;
  margin: 0 auto;
  border:1px solid #ccc;
  border-radius: 50rpx;
  margin-top: 20rpx;
}

.loginBtnView {
  margin-top: 0px;
  margin-bottom: 0px;
  padding-bottom: 0px;
}
 
.loginBtn {
  width: 90%;
  height: 80rpx;
  line-height: 80rpx;
  margin-top: 35px;
  color: #fff;
  background-color:#7e8ef0;
  border: 0.1rpx solid #ccc;
  border-radius: 40rpx;
}
 
 
.accountImage, .pwdImage {
  margin-right: 10px;
  margin-top: 10px;
  width: 14px;
  height: 14px
}

.mytest{
  margin-top: 17rpx;
}
