.editRemark {
    margin-top: 96px;
    padding: 0 50rpx;
    position: relative;
}

.editRemark .title {
    font-size: 30px;
    line-height: 42px;
    color: #22262D;
}

.editRemark .input {
    margin-top: 25px;
    position: relative;
}

.editRemark .input textarea {
    padding: 10px;
    font-size: 16px;
    line-height: 22px;
    background-color: #fff;
    border: 1px solid #A7A7A7;
    color: #A7A7A7;
    height: 180px;
}
.editRemark .input .count {
    position: absolute;
    right: 10px;
    bottom: 5px;
    font-family: PingFangSC-Regular;
    font-size: 12px;
    color: #A7A7A7;
    letter-spacing: 0;
}
.editRemark .submit {
    border-radius: 5px;
    color: #fff;
    font-size: 16px;
    line-height: 44px;
    margin-top: 35px;
}

page {
    background-color: #EFEFEF;
